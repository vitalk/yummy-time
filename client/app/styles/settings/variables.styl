// black
$bg-dark = #000
$bs-dark = #000
$c-dark = #000

// white
$bg-light = #fff
$bs-light = #fff
$c-light = #fff

// orange
$orange = #fbbe00

// grey
$gr3 = #333
$gr9 = #999
$grD = #dadada

// semantic colors
$bg-action = $orange
$bg-primary = $orange

// medias
$max360 = 'only screen and (max-width 360px)'
$min480 = 'only screen and (min-width 480px)'
$max767 = 'only screen and (max-width 767px)'
$max767portrait = 'only screen and (max-width 767px) and (orientation : portrait)'
$min768 = 'only screen and (min-width 768px)'

// typography
$line-height = 1.4
$h1-font-size = 2.3rem
$h2-font-size = 2.0rem
$h3-font-size = 1.8rem
$h4-font-size = 1.6rem
$h5-font-size = 1.4rem
$h6-font-size = 1.2rem

// error block
$err-height = 13px
$err-msg = rgba(red,.63)
$err-line = rgba(red,.33)

