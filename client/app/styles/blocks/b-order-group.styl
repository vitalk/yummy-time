.b-order-group
  &__wrapper
    cursor pointer
    padding 10px
    box-shadow 1px 1px 5px 0 rgba($bs-dark,.5)
    background $bg-light
    transition box-shadow .2s ease-out

    &:hover
      box-shadow 1px 1px 8px 0 rgba($bs-dark,.5)

  &__person
    color $c-dark
    font-size $h3-font-size
    margin-right auto

  &__money
    color $c-dark
    font-size $h4-font-size
    margin-right 8px

  &__summary
    padding 15px 15px 15px 10px
    background $bg-light
    position relative
    display none

    &:before
      content ''
      display block
      position absolute
      height 1px
      left 0
      right 0
      top 0
      margin 0 auto
      width calc(100% - 20px)
      background $grD

  &__row
    display flex
    align-items center

    &:not(:first-child)
      margin-top 5px

  &__checkbox
    width 30px
    height 30px
    position relative

    .checkbox__text
      position absolute
      left 0
      top 0
      right 0
      bottom 0
      margin auto

  &__remove-btn
    margin-right 8px
