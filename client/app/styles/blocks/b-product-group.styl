.b-product-group
  padding 10px
  background $bg-light
  color $c-dark

  &__grouper
    padding 0

  &__list
    margin-left 10px
    list-style disc inside

  &__item
    display flex
    justify-content space-between
    align-items center

    &:before
      content '-'
      margin-right .5em
      color $gr3

    &_alone
      justify-content flex-start

  &__body
    margin-left 0
    color inherit

  &__control
    margin-right 0
