.b-input-group
  display flex
  position relative

  &__item
    margin-left -1px

    &:first-child
      margin-left 0
      border-top-right-radius 0
      border-bottom-right-radius 0

    &:last-child
      border-top-left-radius 0
      border-bottom-left-radius 0

    &:hover
      z-index 1

    &:focus
      z-index 2

  &__button
    width 1%
    font-weight normal

  &__control
    width 100%
    padding 0 10px
    font-size inherit
    line-height inherit

    color $c-dark
    background transparent
    border 1px solid
    border-color $grD

    &:focus
      border-color $bg-primary
      outline 1px solid $bg-primary

    &_disabled
      pointer-events none
      cursor not-allowed
      background $grD
      opacity 0.5
