{{#b-order order=order portions=portions tabs=tabs}}
  {{#unless foundNothing}}
    <ul class="b-list b-order__content">
      {{#each groupedPortions as |group|}}
        {{b-order-group order=order portions=group.list owner=group.grouper}}
      {{/each}}
    </ul>

    {{b-order-actions order=order}}

  {{else}}
    {{b-blank-order}}
  {{/unless}}

  {{#if canAdd}}
    {{#link-to 'order.products' order.id class="i-button-create"}}{{/link-to}}
  {{else}}
    {{#link-to 'order.products' order.id class="i-button-create i-button-create_disabled"}}{{/link-to}}
  {{/if}}

{{/b-order}}
