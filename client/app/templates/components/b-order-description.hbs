<div class="b-order__row">
  <div class="b-order__place">
    {{#link-to 'order.index' order.id class="b-order__link"}}
      {{order.vendor.title}}
    {{/link-to}}
    {{#if order.active}}
      {{i-open-lock}}
    {{else}}
      {{i-close-lock}}
    {{/if}}
  </div>
  <time class="b-order__time">{{order.time}}</time>
</div>

<div class="b-order__row">
  <div class="b-person b-order__manager">
    <span class="b-person__name">{{order.manager.displayName}}</span>
    <span class="b-order__location">{{order.location}}</span>
  </div>
  <div class="b-order__money b-order-money">
    <span class="b-order-money__available">{{format-currency order.money.available}}</span>
    {{#if order.isReady}}
      <span class="b-order-money__total">{{format-currency order.money.total}}</span>
    {{else}}
      <span class="b-order-money__total b-order-money__total_not-enough"
            title="Минимальная сумма заказа {{format-currency order.money.required sep=' '}}">
        {{format-currency order.money.total}}
      </span>
      <div class="b-order-money__note">
        Минимальная сумма заказа {{format-currency order.money.required}}
      </div>
    {{/if}}
  </div>
</div>
